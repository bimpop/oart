
    <div class="modal fade" id="artworkEdit" tabindex="-1" aria-labelledby="artworkEditLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-warning text-white">
                    <h5 class="modal-title">Edit Artwork - <%= artwork.title %></h5>
                    <button type="button" class="close btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                        <span>&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form class="form" action="/artworks/<%= artwork._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input id="title" class="form-control" type="text" name="artwork[title]" value="<%= artwork.title %>">
                        </div>
                        <div class="form-group">
                            <label for="image">Image</label>
                            <input id="image" class="form-control" type="text" name="artwork[image]" value="<%= artwork.image %>">
                        </div>
                        <div class="form-group">
                            <label for="desc">Description</label>
                            <textarea id="desc" class="form-control" name="artwork[desc]"><%= artwork.desc %></textarea>
                        </div>
                        <div class="form-group">
                            <input class="btn btn-warning btn-block" type="submit" value="Save">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-dark" data-dismiss="modal" aria-label="Close">Close</button>
                </div>
            </div> 
        </div>
    </div>
