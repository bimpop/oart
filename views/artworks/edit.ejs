<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-push-3" style="margin:25px auto;">
                <h1 class="text-center">Edit <%= artwork.title %></h1>
                <form class="form" action="/artworks/<%= artwork._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="title">Title:</label>
                        <input id="title" class="form-control" type="text" name="artwork[title]" value="<%= artwork.title %>">
                    </div>
                    <div class="form-group">
                        <label for="image">Image:</label>
                        <input id="image" class="form-control" type="text" name="artwork[image]" value="<%= artwork.image %>">
                    </div>
                    <div class="form-group">
                        <label for="desc">Description:</label>
                        <input id="desc" class="form-control" type="text" name="artwork[desc]" value="<%= artwork.desc %>">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block" type="submit" value="Update">
                    </div>
                </form>
                <a href="/artworks">Back to Gallery</a>
            </div> 
        </div>
        
    </div>

<% include ../partials/footer %>