<% include ../partials/header %>

    <div class="container">
        <div class="row" style="margin:25px auto; width: 30%;">
            <h1 class="text-center">Add New Artwork</h1>
            <form class="form text-center" action="/artworks" method="POST">
                <div class="form-group">
                    <label>Title: <input class="form-control" type="text" name="artwork[title]"></label>
                </div>
                <div class="form-group">
                    <label>Image: <input class="form-control" type="text" name="artwork[image]"></label>
                </div>
                <div class="form-group">
                        <label>Description: <input class="form-control" type="text" name="artwork[desc]"></label>
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit">
                </div>
            </form>
            <a href="/artworks">Back to Gallery</a>
        </div>
    </div>

<% include ../partials/footer %>