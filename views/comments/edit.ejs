
<!-- comment edit modal -->
<div class="modal fade" id="commentEdit" tabindex="-1" aria-labelledby="commentEditLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-white">
                <h5 class="modal-title" id="commentEditLabel">Edit comment by <%= comment.author %></h5>
                <button type="button" class="close btn btn-outline-danger" data-dismiss="modal" aria-label="Close">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form" action="/artworks/<%= artwork._id %>/comments/<%= comment._id %>?_method=PUT" method="POST" role="form">
                    <div class="form-group">
                        <label for="author">Name</label>
                        <input id="author" class="form-control" name="comment[author]" placeholder="Your name" value="<%= comment.text %>">
                    </div>
                    <div class="form-group">
                        <label for="text">Text</label>
                        <textarea id="text" class="form-control" name="comment[text]" placeholder="Enter your comment here">
                            <%= comment.text %>
                        </textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-warning btn-block" type="submit" value="Save">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-dismiss="modal" aria-label="Close">Close</button>
            </div>
        </div>
    </div>
</div>
