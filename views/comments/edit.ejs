<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-push-3" style="margin:25px auto;">
                <h2 class="text-center">Edit Comment by <%= comment.author %></h2>
                <form class="form" action="/artworks/<%= artwork_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="author">Author:</label>
                        <input id="author" class="form-control" type="text" name="comment[text]" value="<%= comment.author %>">
                    </div>
                    <div class="form-group">
                        <label for="text">Text:</label>
                        <textarea id="text" class="form-control" name="comment[author]"><%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block" type="submit" value="Update">
                    </div>
                </form>
                <a href="/artworks">Back to Gallery</a>
            </div>
        </div>
        
    </div>

<% include ../partials/footer %>