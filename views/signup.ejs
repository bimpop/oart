<% include ./partials/header %>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-push-3" style="margin:25px auto;">
                <h2 class="text-center">Sign Up</h2>
                <form class="form" action="/signup" method="POST">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input id="username" class="form-control" type="text" name="username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input id="password" class="form-control" type="password" name="password">
                    </div>
                    <hr>
                    <p>For Admin only</p>
                    <div class="form-group">
                        <label for="adminCode"><em>Admin:</em></label>
                        <input id="adminCode" class="form-control" type="password" name="adminCode">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary btn-block" type="submit" value="Sign up">
                    </div>
                </form>
                <p>Already a member? <a href="/login">Log in here</a></p>
                <a href="/artworks">Back to Gallery</a>
            </div>
        </div>
        
    </div>

<% include ./partials/footer %>