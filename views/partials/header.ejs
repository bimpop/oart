<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>O-Art</title>
    <link rel="stylesheet" href="/css/all.css">
    <link rel="stylesheet" href="/asset/bootstrap-3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/main.css">
</head>
<body>
    <nav  class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle" data-toggle="collapse" data-target="#mainNavBar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">
                    <i class="fas fa-pencil-alt"></i> O-Art
                </a>    
            </div>

            <div class="collapse navbar-collapse" id="mainNavBar">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li><a href="/signup"><i class="fas fa-user-plus"></i> Sign up</a></li>
                        <li><a href="/login"><i class="fas fa-sign-in-alt"></i> Log in</a></li>
                    <% } else { %>
                        <li><a href="#">Signed in as <i class="fas fa-user-alt"></i> <%= currentUser.username %></a></li>
                        <li><a href="/logout"><i class="fas fa-sign-out-alt"></i> Log out</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <section class="container">
        <div class="container">
            <% if(error && error.length > 0){ %>
                <div class="alert alert-danger fade in">
                    <button href="#" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= error %>
                </div>
            <% } %>
            <% if(success && success.length > 0){ %>
                <div class="alert alert-success fade in">
                    <button href="#" class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <%= success %>
                </div>
            <% } %>
        </div>
        
        